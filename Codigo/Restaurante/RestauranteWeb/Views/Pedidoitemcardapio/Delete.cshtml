@model RestauranteWeb.Models.PedidoitemcardapioViewModel

<div class="details-container">
    <h2 class="details-title">Deletar Item do cardapio</h2>
    <p class="confirmation-text">Você tem certeza de que deseja excluir este Item?</p>
    <hr class="details-divider" />
    <dl class="details-list">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdItemCardapio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdItemCardapio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdPedido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdPedido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
    </dl>

    <form asp-action="Delete" method="post" class="details-buttons">
        <input type="hidden" asp-for="IdItemCardapio" />
        <input type="hidden" asp-for="IdPedido" />
        <button type="submit" class="btn btn-danger">Confirmar exclusão</button>
        <a asp-action="Index" class="btn btn-back">Voltar</a>
    </form>
   
</div>
