@model RestauranteWeb.Models.PedidoitemcardapioViewModel

<div class="details-container">
    <h2 class="details-title">Detalhes do Item no cardapio</h2>
    <hr class="details-divider" />
    <dl class="details-list">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdItemCardapio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdItemCardapio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdPedido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdPedido)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
    </dl>
    <div class ="details-buttons">
        @Html.ActionLink("Edit", "Edit", new { IdItemCardapio = Model.IdItemCardapio, IdPedido = Model.IdPedido }) |
        <a asp-action="Index" class="btn btn-back">Voltar</a>
    </div>
</div>
