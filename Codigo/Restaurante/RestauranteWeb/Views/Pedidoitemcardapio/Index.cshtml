@model IEnumerable<RestauranteWeb.Models.PedidoitemcardapioViewModel>

<div class="index-container">
    <div class="index-header">
        <h2 class="index-title">Lista de Items no cardapio</h2>
        <div class="index-actions">
            <a asp-action="Create" class="btn btn-create">Cadastrar</a>
            <a class="btn btn-primary" data-toggle="modal" data-target="#quantidade">Quantidade de Item no cardapio</a>
        </div>
    </div>
    <table class="table index-table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdItemCardapio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdPedido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantidade)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.IdItemCardapio)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdPedido)</td>
                    <td>@Html.DisplayFor(modelItem => item.Quantidade)</td>
                    <td>
                        <div class="btn-group">
                            @Html.ActionLink("Edit", "Edit", new { IdItemCardapio = item.IdItemCardapio, IdPedido = item.IdPedido }, new { @class = "btn btn-edit" })
                            @Html.ActionLink("Details", "Details", new { IdItemCardapio = item.IdItemCardapio, IdPedido = item.IdPedido }, new { @class = "btn btn-details" })
                            @Html.ActionLink("Delete", "Delete", new { IdItemCardapio = item.IdItemCardapio, IdPedido = item.IdPedido }, new { @class = "btn btn-danger" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

