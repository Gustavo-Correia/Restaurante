@model RestauranteWeb.Models.RestauranteViewModel

<div class="details-container">
    <h2 class="details-title">Deletar Restaurante</h2>
    <p class="confirmation-text">Você tem certeza de que deseja excluir este restaurante?</p>
    <hr class="details-divider" />
    <dl class="details-list">
        <dt>@Html.DisplayNameFor(model => model.Id)</dt>
        <dd>@Html.DisplayFor(model => model.Id)</dd>

        <dt>@Html.DisplayNameFor(model => model.Cnpj)</dt>
        <dd>@Html.DisplayFor(model => model.Cnpj)</dd>

        <dt>@Html.DisplayNameFor(model => model.Nome)</dt>
        <dd>@Html.DisplayFor(model => model.Nome)</dd>

        <dt>@Html.DisplayNameFor(model => model.Cep)</dt>
        <dd>@Html.DisplayFor(model => model.Cep)</dd>

        <dt>@Html.DisplayNameFor(model => model.Rua)</dt>
        <dd>@Html.DisplayFor(model => model.Rua)</dd>

        <dt>@Html.DisplayNameFor(model => model.Bairro)</dt>
        <dd>@Html.DisplayFor(model => model.Bairro)</dd>

        <dt>@Html.DisplayNameFor(model => model.Cidade)</dt>
        <dd>@Html.DisplayFor(model => model.Cidade)</dd>

        <dt>@Html.DisplayNameFor(model => model.Estado)</dt>
        <dd>@Html.DisplayFor(model => model.Estado)</dd>

        <dt>@Html.DisplayNameFor(model => model.Telefone1)</dt>
        <dd>@Html.DisplayFor(model => model.Telefone1)</dd>

        <dt>@Html.DisplayNameFor(model => model.Telefone2)</dt>
        <dd>@Html.DisplayFor(model => model.Telefone2)</dd>
    </dl>

    <form asp-action="Delete" class="details-buttons">
        <input type="submit" value="Deletar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-back">Voltar</a>
    </form>
</div>
