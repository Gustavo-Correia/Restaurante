@model RestauranteWeb.Models.MesaViewModel
<div class="details-container">
    <h2 class="details-title">Cadastro de Restaurante</h2>
    <hr class="details-divider" />
    <div class="form-container">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Identificacao" class="control-label"></label>
                <input asp-for="Identificacao" class="form-control" />
                <span asp-validation-for="Identificacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdRestaurante" class="control-label"></label>
                <select asp-for="IdRestaurante" asp-items="@Model.Restaurantes" class="form-control"> </select>
                <span asp-validation-for="IdRestaurante" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" asp-items="@Model.SelectStatus" class="form-control"> </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


