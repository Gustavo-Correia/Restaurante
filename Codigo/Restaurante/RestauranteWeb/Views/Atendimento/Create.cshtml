@model RestauranteWeb.Models.AtendimentoViewModel

@{
    ViewData["Title"] = "Criar Novo Atendimento";
}
<div class="details-container">
    <h2 class="details-title">Cadastrar Atendimento</h2>
    <hr class="details-divider" />
    <div class="form-container">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="IdMesa" class="control-label"></label>
                <select asp-for="IdMesa" class="form-control" asp-items="Model.SelectMesa">

                </select>
                <span asp-validation-for="IdMesa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
